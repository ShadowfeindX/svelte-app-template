{
  "name": "svelte-app",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "validate": "svelte-check",
    "start": "firebase emulators:start",
    "build": "npm-run-all service-build app-build functions-build",
    "dev": "concurrently --kill-others \"yarn app-dev\" \"yarn service-dev\" \"yarn functions-dev\" \"yarn start\"",
    "deploy": "firebase deploy",
    "app-build": "rollup -c",
    "app-dev": "rollup -c -w",
    "service-dev": "cd service && yarn dev",
    "service-build": "cd service && yarn build",
    "functions-dev": "cd functions && yarn dev",
    "functions-build": "cd functions && yarn build"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@tsconfig/svelte": "^1.0.0",
    "concurrently": "^5.3.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^1.0.0",
    "svelte-preprocess": "^4.0.0",
    "tslib": "^2.0.0",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "firebase": "^8.0.0",
    "sass": "^1.28.0",
    "svelte-spa-router": "^3.0.5"
  }
}
